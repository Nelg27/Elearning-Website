@model ELearning.Models.user
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "sign Up";
}
<section class="login-block" style="margin:15%;background-color:white">
    <div class="container">
        <div class="row">
            <div class="col-md-12 login-sec">
                <h2 class="text-center">SIGN UP NOW</h2>

                @using (Html.BeginForm("SignUp", "Home", FormMethod.Post, new { @class = "login-form" }))
                {

                    <div class="form-group">
                        <label for="name" class="text-uppercase">Nom</label>
                        @Html.TextBoxFor(model => model.nom, new { @type = "text", @class = "form-control", required = "required" })

                    </div>

                    <div class="form-group">
                        <label for="name" class="text-uppercase">Prenom</label>
                        @Html.TextBoxFor(model => model.prenom, new { @type = "text", @class = "form-control", required = "required" })

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-uppercase">Level</label>

                        @Html.DropDownListFor(model => model.level, new[] {
                        new SelectListItem() {Text = "Secondaire", Value ="1"},
                        new SelectListItem() {Text = "Collegial", Value = "2"},
                        new SelectListItem() {Text = "Universitaire", Value = "3"}
                        }, "Choose an option", new { @class = "form-control" })

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-uppercase">Email</label>
                        @Html.TextBoxFor(model => model.mail, new { @type = "text", @class = "form-control", required = "required" })
                    </div>
                
                    <div class="form-check">

                        <button type="submit" class="btn btn-login float-right">Submit</button>
                    </div>

                }
                <span style="color:green">@ViewBag.accept</span>
            </div>
        </div>
    </div>
</section>