@model ELearning.Models.user
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "sign In";
}
<section class="login-block" style="margin:7%;background-color:white">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Login Now</h2>

                @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { @class = "login-form" }))
                {

                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-uppercase">Username</label>
                        @Html.TextBoxFor(model => model.Id, new { @type = "text", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-uppercase">Password</label>
                        @Html.TextBoxFor(model => model.password, new { @type = "password", @class = "form-control" })

                    </div>
                    @Html.ValidationMessageFor(model => model.password)

                    <div class="form-check">
                        <button type="submit" class="btn btn-login float-right">Submit</button>
                    </div>
              
                }


                <a href="SignUp" class="copy-text"> Sign Up Now !</a>
            </div>
            <div class="col-md-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="https://images.says.com/uploads/story_source/source_image/540526/c9ef.jpg">
                        </div>
                  
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>